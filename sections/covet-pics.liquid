<div data-section-id="{{ section.id }}" data-section-type="covet-pics-feed">
  {%- assign sectionHeading = section.settings.title -%}
  {%- assign sectionSubHeading = section.settings.subtitle -%}  
  {%- assign gallery_code = section.settings.gallery-code -%}
  <section class="home-section content-area {% if sectionHeading != blank %}has-heading{% endif %}">
    <div class="tt-block-title"> 
      {% if sectionHeading != blank %}
        <h2 class="tt-title">{{ sectionHeading }}</h2>
      {% endif %}
      {% if sectionSubHeading != blank %}
        <div class="tt-description">{{ sectionSubHeading }}</div>
      {% endif %}    
      <div class="covet-pics-wrap">
        {{ gallery_code }}
      </div>
    </div>
  </section>
</div>
{% schema %}
{
  "name": "Covet.pics Shop Gallery",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Instagram feed"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Slogan"
    },
    {
      "type": "textarea",
      "id": "gallery-code",
      "label": "Gallery Embed Code"
    }
  ],
  "presets": [
    {
      "category": "Instagram Shop",
      "name": "Covet.pics Shop Gallery"
    }
  ]
}
{% endschema %}